.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
    
      .side-bar__user-name__top-items__name
        =current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path do
          = link_to new_group_path, class:'icon' do
            = icon('fas', 'edit')
          = link_to edit_user_path(current_user), class:'icon'  do
            = icon('fas', 'cog')
  .side-bar__group-list 
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do 
          .group__name 
            = group.name
          .group__message
            =group.show_last_message
    


.main-chat
  .main-chat__group-info
    .test
      = @group.name
      .menber
        - @group.users.each do |user|
          = user.name
    .edit
      = link_to "/groups/#{@group.id}/edit",method: :get,class:'edit' do
        .edits
          Edit
  .main-chat__message-list
    .messages
      =render @messages
  .forms
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'forms__message', placeholder: 'type a message'
      .forms__mask
        = f.label :image, class: 'forms__mask__image' do
          = icon('fas', 'image', class: 'forms__mask__image')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'forms__send'